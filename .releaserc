{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "app/build/libs/app.jar",
            "label": "Main executable Jar file"
          }
        ]
      }
    ],
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["Dockerfile.prod"],
            "from": "ghcr.io/codingpot/github-org-member-manage-action:.*",
            "to": "ghcr.io/codingpot/github-org-member-manage-action:${nextRelease.version}",
            "results": [
              {
                "file": "Dockerfile.prod",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": ["README.md"],
            "from": "\"codingpot/github-org-member-manage-action:v.*\"",
            "to": "\"codingpot/github-org-member-manage-action:v${nextRelease.version}\"",
            "results": [
              {
                "file": "README.md",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["Dockerfile.prod", "README.md"]
      }
    ]
  ]
}
